rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow authenticated users to read all users (for team selection)
    // but only write to their own user document
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write to their own data
    match /userdata/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public collections (if needed)
    match /public/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Clients collection - allow authenticated users to read and write
    match /clients/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // PED Entries collection - allow authenticated users to read and write
    match /pedEntries/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Recording Days collection - allow authenticated users to read and write
    match /recordingDays/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Brain Dump Notes collection - allow authenticated users to read and write
    match /brainDumpNotes/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Scripts collection - allow authenticated users to read and write
    match /scripts/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Social Media Followers collection - allow authenticated users to read and write
    match /socialMediaFollowers/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Game Leaderboard collection - allow authenticated users to read all scores
    // but only write to their own score document
    match /gameLeaderboard/{userEmail} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == userEmail;
    }
  }
}
